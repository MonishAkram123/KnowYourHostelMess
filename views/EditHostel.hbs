<!DOCTYPE html>
<html>
	{{>header}}
<body background="images/background.jpg">
	{{>nav}}
	

	<div class="container">
		<div class="row">
			<div class="col-xm-12 col-sm-12 col-md-10 col-lg-6" style="margin: 0 auto; padding: 0 auto;">
				<form class="jumbotron shadow" action="/editHostel" method="post" encType="multipart/form-data">
					<input type="hidden" name="hid" value="{{hostelDetails.hid}}"/>
					<div align="right">
						<div  class = "col-lg-3 col-md-3 col-sm-3 col-xm-1 bg-dark card shadow">
						<img src="images/hostels/{{hostelDetails.hid}}.jpg" width="100%" height="100%">
					</div>
						<input type="file" class="col-lg-3 col-md-3 col-sm-3 col-xm-1 btn btn-secondary form-control shadow" style="margin-top: 5px;" name="image">
				</div>
				<b>Hostel Name</b><input type="text" class="form-control" placeholder="Enter Name" value="{{hostelDetails.name}}" name="name"><br>
				<b>Hostel Description</b><input type="text" class="form-control" placeholder="Hostel Description" value="{{hostelDetails.description}}" name="description"><br>
				<button type="submit" class="form-control btn btn-primary shadow">Submit</button>
				</form>
			</div>
			
		</div>
	</div>
	{{>footer}}
</body>
</html>