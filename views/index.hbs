<!DOCTYPE html>

  {{>header}}


  
  <body background="/images/background.jpg">
    {{>nav}}
    <div class="main">
      <hr>
      <div class="row">
        <div class="col-lg-3 bg-dark" style="color: white">
          <h3 align="center">Notifications</h3>
          <hr style="border-color: white; border-width: 3px;">
          {{#each topNotifications}}
          <h5>{{title}}:</h5>
          <p style="font-size: 14px;">{{text}}</p>
          <hr style="border-color: white; border-width: 2px;">
          {{/each}}
          <a href="/notifications?hid=0">View all</a>
        </div>
        <div class="col-lg-8">
          <h2>HOSTELS</h2>
          <div class="row bg-dark">
            {{#each hostel}}
            <div class="col-xm-12 col-md-4 col-lg-3 column shadow" style="padding: 0px; margin-top: 10px; margin-bottom: 10px;">
              <a href="/hostel?hid={{hostelId}}">
                <div class="container content" style="text-align: center; background-color: #DDDDDD">
                  <img src="images/hostels/{{hostelId}}.jpg" class="img-thumbnail" alt="Mountains" style="height: 150px; width: 100%;min-height: 150px">
                  <div>
                    <p><h5>{{hostelName}}</h5></p>    
                  </div>
                </div>
              </a>
            
              {{#if ../user.is_admin}}
              <p class="text-center">
                <a href="/EditHostel?hid={{hostelId}}">
                 <i class="icon ion-ios-compose"></i>
                </a>
              </p>
              {{/if}}
            </div>
            {{/each}}
          <!-- END GRID -->
          </div>  
        </div>  
      </div>
    </div>
    <!-- Modal for Login -->
  {{>footer}}
  </body>
</html>