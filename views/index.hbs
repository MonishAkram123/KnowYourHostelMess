<!DOCTYPE html>
<html lang="en">
	{{>header}}
	<body>
    {{>nav}}
      <div class="main">

          
          <hr>
          
          <h2>HOSTELS</h2>
                   
         
          <div class="row bg-dark" >

            {{#each hostel}}
            <div class="col-xm-3 column">
             <a href="#">
              <div class="content">
              <img src="images/{{hostelId}}" alt="Mountains" height="10%" width="21%">
              <p><h5>{{hostelName}}</h5></p>
              </div>
              </a>
            </div>
            {{/each}}
          <!-- END GRID -->
          </div>

          <!-- Modal for Login -->
          

          <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="position: absolute;top: 20%">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Login</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <form action="login" method="post">
                    <div class="form-group" style="padding: 10px">
                      <input type="text" class="form-control" placeholder="Enter Username" name="id_text">
                      <input type="password" class="form-control" placeholder="Enter Password" name="password_text" style="margin-top: 20px">
                       <button type="submit" class="btn btn-primary form-control" style="margin-top: 20px">Login</button>
                    </div>

                  </form>
                </div>
              </div>
            </div>
          </div>
          </div>



        {{>footer}}
	</body>
</html>